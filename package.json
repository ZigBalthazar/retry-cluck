{
  "name": "retry-cluck",
  "version": "0.0.1",
  "description": "retry utility for NestJS with support for customizable backoff, jitter, and future-proof features like HTTP and gRPC retries.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf --glob dist/* && tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist && copyfiles -u 1 src/**/*.css src/**/*.js dist",
    "prepare": "husky install",
    "release": "standard-version",
    "test": "jest"
  },
  "keywords": [
    "retry-pattern",
    "retry",
    "idempotent",
    "netsjs"
  ],
  "author": "zig balthazar",
  "license": "MIT",
  "dependencies": {
    "@golevelup/nestjs-modules": "^0.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.2",
    "@nestjs/common": "^10.3.10",
    "@nestjs/core": "^10.3.10",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.7",
    "@types/pluralize": "^0.0.33",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^52.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.4.5"
  }
}
